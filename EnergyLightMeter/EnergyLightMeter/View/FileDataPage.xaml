<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnergyLightMeter.View.FileDataPage"
             Title="File">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="FilePageChosenFile"
                    Title="Choose a file"
                    ItemsSource="{Binding ExistingFiles}"
                    SelectedItem="{Binding SelectedFile}"
                    SelectedIndexChanged="FilePageChosenFile_OnSelectedIndexChanged"></Picker>
            <StackLayout x:Name="StackLayoutGrid"></StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>